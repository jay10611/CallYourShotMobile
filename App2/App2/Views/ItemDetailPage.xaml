<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Rules:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Jason's score:" FontSize="Medium" />
        <Label Text="{Binding JasonsScore}" FontSize="Small"/>
        <Label Text="Milks score:" FontSize="Medium" />
        <Label Text="{Binding MilksScore}" FontSize="Small"/>
        <Label Text="Greg's score:" FontSize="Medium" />
        <Label Text="{Binding GregsScore}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>